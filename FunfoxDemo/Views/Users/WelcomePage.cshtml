@using Manager
@model Entity.User
@using System.Configuration
@{
    string pagetitle = "Welcome";
    string domainname = ConfigurationManager.AppSettings["DomainUrl"];
}
@section metataqs{

    <title>@pagetitle | @domainname </title>
}


<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="~/"><i class="fa fa-home"></i></a></li>
        <li><a href="#">My Account</a></li>
    </ul>
    <div>
        @Html.Partial("_AsideMenuMobile")
    </div>
    <div class="row">
        <!--Middle Part Start-->
        <div class="col-sm-9" id="content">
            <h2 class="title">My Account</h2>
            <p class="lead">Hello, <strong>@Session[SessionKeys.Name]</strong> - To update your account information.</p>

            <div class="row">
                <div class="col-sm-6">
                    <fieldset id="personal-details">
                        <legend>Personal Details</legend>
                        <div class="form-group  ">

                            <label for="input-firstname" class="control-label"><strong>First Name: </strong> @Model.FirstName </label>

                        </div>
                        @if (Model.LastName != null)
                        {
                            <div class="form-group  ">
                                <label for="input-lastname" class="control-label"><strong>Last Name: </strong> @Model.LastName </label>
                            </div>
                        }

                        <div class="form-group  ">
                            <label for="input-email" class="control-label"><strong>Email:  </strong> @Model.Email</label>
                        </div>
                        <div class="form-group  ">
                            <label for="input-telephone" class="control-label"><strong>Phone: </strong> @Model.Phone </label>
                        </div>
                    </fieldset>
                    <br>
                </div>

                
            </div>
        </div>
        <!--Middle Part End-->
        <!--Right Part Start -->
        @Html.Partial("_AsideMenu")
        <!--Right Part End -->
    </div>
</div>
